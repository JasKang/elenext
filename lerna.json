{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "publish": {
      "verifyAccess": false,
      "verifyRegistry": false,
      "ignoreChanges": ["ignored-file", "*.md", "**/test/**"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "hoist": true,
      "npmClientArgs": ["--no-package-lock", "--no-ci"]
    },
    "version": {
      "allowBranch": ["master"],
      "conventionalCommits": true,
      "amend": false,
      "message": "chore(release): publish"
    }
  }
}
